{
  "name": "it-book-library",
  "version": "1.0.0",
  "description": "IT Book Library - A simple book listing application",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "api": "npx bookmonkey-api",
    "serve": "npx http-server -p 8000",
    "start": "concurrently \"npm run api\" \"npm run serve\"",
    "dev": "tsc --watch"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "bookmonkey-api": "^3.2.0"
  }
}
